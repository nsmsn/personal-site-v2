<ol reversed class="postlist" style="counter-reset: start-from {{ (postslistCounter or postslist.length) + 1 }}">
{% for post in postslist | reverse %}
  <li class="postlist-item{% if post.url == url %} postlist-item-active{% endif %} h-entry">
    
    <a href="{{ post.url | url }}" class="postlist-link p-name u-url">{% if post.data.title %}{{ post.data.title }}{% else %}<code>{{ post.url }}</code>{% endif %}</a>

    <span class="postlist-blurb p-summary">{% if post.data.description %}{{ post.data.description}}{% else %}&nbsp;{% endif %}</span>

    <time class="postlist-date dt-published" datetime="{{ post.date | w3Date }}">{{ post.date | longDate }}</time>
    
    {% for tag in post.data.tags %}
      {%- if collections.tagList.indexOf(tag) != -1 -%}
      {% set tagUrl %}/tags/{{ tag }}/{% endset %}
      <a href="{{ tagUrl | url }}" class="post-tag p-category">{{ tag }}</a>
      {%- endif -%}
    {% endfor %}
  
  </li>
{% endfor %}
</ol>